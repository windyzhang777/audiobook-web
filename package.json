{
  "name": "audiobook-web",
  "version": "1.0.0",
  "description": "Audiobook reader web application with text-to-speech",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "install:all": "npm install && npm install --workspaces",
    "dev": "npm run build:shared && concurrently \"npm run dev:client\" \"npm run dev:server\" \"npm run dev:shared\"",
    "dev:client": "npm run dev -w @audiobook/client",
    "dev:server": "npm run dev -w @audiobook/server",
    "dev:shared": "npm run dev -w @audiobook/shared",
    "build": "npm run build --workspaces --if-present",
    "build:client": "npm run build -w @audiobook/client",
    "build:server": "npm run build -w @audiobook/server",
    "build:shared": "npm run build -w @audiobook/shared",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write \"packages/**/*.{ts,tsx,js,jsx}\""
  },
  "author": "zhwind",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3",
    "concurrently": "^8.2.2"
  }
}